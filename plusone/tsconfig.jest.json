{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",                // ESM so import.meta is allowed
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "target": "ES2020",
    "noEmit": true,
    "isolatedModules": true,           // ts-jest likes this with modern modules
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "types": ["jest", "node", "vite/client"]  // <-- gives ImportMeta/ImportMetaEnv
  },
  "include": ["src", "vite-env.d.ts"]
}